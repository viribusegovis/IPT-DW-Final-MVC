<!--
    These two layouts serve different purposes:
    1. The Login Layout is a simplified layout used specifically for the login page.
       It doesn't include the header, sidebar, or footer, focusing solely on the login content.
    2. The Main Layout is used for the rest of the application when a user is logged in.
       It includes a header with navigation, a sidebar for quick access to different sections,
       and a footer. This layout provides a consistent structure across the application.
-->
<!-- Main Layout -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags for character encoding and responsive design -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Page title -->
    <title>@ViewData["Title"] - Quize</title>

    <!-- CSS stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Quize.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header with navigation -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand logo/name -->
                <a class="navbar-brand mr-auto" asp-area="" asp-controller="Dashboard" asp-action="Index">Quize</a>

                <!-- Responsive navigation toggle button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Login/logout partial view -->
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <!-- Main content area with sidebar -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar navigation -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <!-- Sidebar menu items -->
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Members" asp-action="Index">
                                Members
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Quizzes" asp-action="Index">
                                Quizzes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tags" asp-action="Index">
                                Tags
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">
                                Administrators
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content area -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Quize - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JavaScript libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Renders additional scripts if any -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>